<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0"
         metadata-complete="true">

    <!-- First Servlet -->
    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>com.syos.web.FirstServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/first</url-pattern>
    </servlet-mapping>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.syos.web.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- CORS Filter - MUST be first to handle preflight OPTIONS requests -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.syos.web.CorsFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.syos.web.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/pos/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <!-- Register Servlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.syos.web.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- API Login (React) -->
    <servlet>
        <servlet-name>ApiLoginServlet</servlet-name>
        <servlet-class>com.syos.web.ApiLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ApiLoginServlet</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>

    <!-- API Register (React) -->
    <servlet>
        <servlet-name>ApiRegisterServlet</servlet-name>
        <servlet-class>com.syos.web.ApiRegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ApiRegisterServlet</servlet-name>
        <url-pattern>/api/register</url-pattern>
    </servlet-mapping>

    <!-- Home Servlet -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.syos.web.HomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.syos.web.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- API Me (React) -->
    <servlet>
        <servlet-name>ApiMeServlet</servlet-name>
        <servlet-class>com.syos.web.ApiMeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ApiMeServlet</servlet-name>
        <url-pattern>/api/me</url-pattern>
    </servlet-mapping>

    <!-- API Logout (React) -->
    <servlet>
        <servlet-name>ApiLogoutServlet</servlet-name>
        <servlet-class>com.syos.web.ApiLogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ApiLogoutServlet</servlet-name>
        <url-pattern>/api/logout</url-pattern>
    </servlet-mapping>

    <!-- API Google Login (React) -->
    <servlet>
        <servlet-name>ApiGoogleLoginServlet</servlet-name>
        <servlet-class>com.syos.web.ApiGoogleLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ApiGoogleLoginServlet</servlet-name>
        <url-pattern>/api/google-login</url-pattern>
    </servlet-mapping>






</web-app>
