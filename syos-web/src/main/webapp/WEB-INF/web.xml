<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0"
         metadata-complete="true">

    <!-- CORS Filter - MUST be first to handle preflight OPTIONS requests -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.syos.web.presentation.filters.CorsFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <!-- Auth Filter - Protects authenticated routes -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.syos.web.presentation.filters.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>


    <!-- API Login (React) -->
    <servlet>
        <servlet-name>ApiLoginServlet</servlet-name>
        <servlet-class>com.syos.web.presentation.api.auth.ApiLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ApiLoginServlet</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>

    <!-- API Register (React) -->
    <servlet>
        <servlet-name>ApiRegisterServlet</servlet-name>
        <servlet-class>com.syos.web.presentation.api.auth.ApiRegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ApiRegisterServlet</servlet-name>
        <url-pattern>/api/register</url-pattern>
    </servlet-mapping>


    <!-- API Me (React) -->
    <servlet>
        <servlet-name>ApiMeServlet</servlet-name>
        <servlet-class>com.syos.web.presentation.api.auth.ApiMeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ApiMeServlet</servlet-name>
        <url-pattern>/api/me</url-pattern>
    </servlet-mapping>

    <!-- API Logout (React) -->
    <servlet>
        <servlet-name>ApiLogoutServlet</servlet-name>
        <servlet-class>com.syos.web.presentation.api.auth.ApiLogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ApiLogoutServlet</servlet-name>
        <url-pattern>/api/logout</url-pattern>
    </servlet-mapping>

    <!-- API Google Login (React) -->
    <servlet>
        <servlet-name>ApiGoogleLoginServlet</servlet-name>
        <servlet-class>com.syos.web.presentation.api.auth.ApiGoogleLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ApiGoogleLoginServlet</servlet-name>
        <url-pattern>/api/google-login</url-pattern>
    </servlet-mapping>






</web-app>
